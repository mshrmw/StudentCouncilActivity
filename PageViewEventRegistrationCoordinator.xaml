<Page x:Class="StudentCouncilActivity.PageViewEventRegistrationCoordinator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentCouncilActivity"
      mc:Ignorable="d" 
      d:DesignHeight="515" d:DesignWidth="1000"
      Title="Просмотр регистраций на мои мероприятия">

    <Grid Background="White">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="585" HorizontalAlignment="Left" Margin="30,30,0,30"/>
        <Button x:Name="AcceptRegistration" Content="Принять" Style="{DynamicResource PageButtonActivity}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,30,30" VerticalAlignment="Bottom" Height="40" Width="250"/>
        <Button x:Name="DeleteRegistration" Content="Отказать" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,30,80" VerticalAlignment="Bottom" Height="40" Width="250"/>
        <ComboBox x:Name="EventsBD" HorizontalAlignment="Right" Margin="0,30,30,0" VerticalAlignment="Top" Height="35" Width="250"/>
        <Button x:Name="FilterRegistration" Content="Отфильтровать" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,140,30,0" VerticalAlignment="Top" Height="40" Width="250"/>
        <ComboBox x:Name="TasksBD" HorizontalAlignment="Right" Margin="0,77,30,0" VerticalAlignment="Top" Height="35" Width="250"/>

    </Grid>
</Page>
