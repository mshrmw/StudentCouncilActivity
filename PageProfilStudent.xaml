<Page x:Class="StudentCouncilActivity.PageProfilStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentCouncilActivity"
      mc:Ignorable="d" 
      d:DesignHeight="515" d:DesignWidth="1000"
      Title="Профиль">

    <Grid Background="White">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Height="500" Width="750" Margin="40,8,210,7"/>
        <Button x:Name="edit" Content="Изменить" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,40,90" VerticalAlignment="Bottom" Height="40" Width="150"/>
        <Button x:Name="save" Content="Сохранить" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,40,40" VerticalAlignment="Bottom" Height="40" Width="150"/>
    </Grid>
</Page>
