<Page x:Class="StudentCouncilActivity.PageEventsStudents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentCouncilActivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Мероприятия">

    <Grid Background="White" >
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="450" Height="400" HorizontalAlignment="Left" Margin="30,26,0,24"/>
        <Button x:Name="FilterEvents" Content="Отфильтровать" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,40,42" VerticalAlignment="Bottom" Height="40" Width="250"/>
        <ComboBox HorizontalAlignment="Right" Margin="0,0,40,93" VerticalAlignment="Bottom" Height="35" Width="250"/>

    </Grid>
</Page>
