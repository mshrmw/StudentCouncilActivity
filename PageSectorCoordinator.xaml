<Page x:Class="StudentCouncilActivity.PageSectorCoordinator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentCouncilActivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
    Title="Сектор">

    <Grid Background="White">
        <Label Content="Участники Вашего сектора" FontFamily="FuturaBookC" FontSize="22" HorizontalAlignment="Left" Margin="25,15,0,0" VerticalAlignment="Top"/>
        <Label Content="Сектора, в которых Вы состоите" FontFamily="FuturaBookC" FontSize="22" HorizontalAlignment="Right" Margin="0,15,85,0" VerticalAlignment="Top"/>
        <Label Content="Все сектора колледжа" FontFamily="FuturaBookC" FontSize="22" HorizontalAlignment="Right" Margin="0,215,176,0" VerticalAlignment="Top"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="350" Height="300" HorizontalAlignment="Left" Margin="30,51,0,99"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="350" Height="100" HorizontalAlignment="Right" Margin="0,51,30,299"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="350" Height="100" HorizontalAlignment="Right" Margin="0,251,30,99"/>
        <Button x:Name="DeleteMember" Content="Удалить участника" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Left" Margin="80,0,0,42" VerticalAlignment="Bottom" Height="40" Width="250"/>
        <Button x:Name="ExitFromSectors" Content="Выйти из сектора" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,168,80,0" VerticalAlignment="Top" Height="40" Width="250"/>
        <Button x:Name="JoinFromSectors" Content="Вступить в сектор" Style="{DynamicResource PageButtonActivity}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,80,42" VerticalAlignment="Bottom" Height="40" Width="250"/>
    </Grid>
</Page>
