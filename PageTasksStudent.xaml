<Page x:Class="StudentCouncilActivity.PageTasksStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentCouncilActivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Задания">

    <Grid Background="White">
        <Label Content="Задания, которые Вы выполнили" FontFamily="FuturaBookC" FontSize="22" HorizontalAlignment="Left" Margin="25,15,0,0" VerticalAlignment="Top"/>
        <Label Content="Невыполненные задания" FontFamily="FuturaBookC" FontSize="22" HorizontalAlignment="Right" Margin="0,15,153,0" VerticalAlignment="Top"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="350" Height="300" HorizontalAlignment="Left" Margin="30,51,0,99"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="350" Height="300" HorizontalAlignment="Right" Margin="0,51,30,99"/>
        <Button x:Name="ExecuteTask" Content="Выполнить" Style="{DynamicResource PageButtonActivity}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,80,42" VerticalAlignment="Bottom" Height="40" Width="250"/>

    </Grid>
</Page>
