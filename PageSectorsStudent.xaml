<Page x:Class="StudentCouncilActivity.PageSectorsStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentCouncilActivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Сектора">

    <Grid Background="White">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="399" HorizontalAlignment="Left" Margin="30,30,0,30"/>
        <Button x:Name="ExitFromSectors" Content="Выйти из сектора" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,30,80" VerticalAlignment="Bottom" Height="40" Width="250"/>
        <Button x:Name="JoinFromSectors" Content="Вступить в сектор" Style="{DynamicResource PageButtonActivity}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,30,30" VerticalAlignment="Bottom" Height="40" Width="250"/>
        <ComboBox HorizontalAlignment="Right" Margin="0,30,30,0" VerticalAlignment="Top" Height="35" Width="250">
            <TextBlock FontFamily="FuturaBookC" FontSize="18">Сектора, в которых Вы состоите</TextBlock>
            <TextBlock FontFamily="FuturaBookC" FontSize="18">Все сектора колледжа</TextBlock>
        </ComboBox>
        <Button x:Name="FilterSectors" Content="Отфильтровать" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,85,30,0" VerticalAlignment="Top" Height="40" Width="250"/>

    </Grid>
</Page>
