<Page x:Class="StudentCouncilActivity.PageSectorPredsed"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentCouncilActivity"
      mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800"
    Title="Сектор">

    <Grid Background="White">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="402" HorizontalAlignment="Left" Margin="30,30,0,30"/>
        <Button x:Name="DeleteMember" Content="Удалить сектор" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,145,30,0" VerticalAlignment="Top" Height="40" Width="250"/>
        <Button x:Name="ExitFromSectors" Content="Просмотр участников" Style="{DynamicResource PageButton}" FontSize="20" HorizontalAlignment="Right" Margin="0,88,30,0" VerticalAlignment="Top" Height="40" Width="250"/>
        <Button x:Name="JoinFromSectors" Content="Добавить сектор" Style="{DynamicResource PageButtonActivity}" FontSize="20" HorizontalAlignment="Right" Margin="0,0,30,30" VerticalAlignment="Bottom" Height="40" Width="250" Click="JoinFromSectors_Click"/>
        <ComboBox HorizontalAlignment="Right" Margin="0,30,30,0" VerticalAlignment="Top" Height="40" Width="250"/>
    </Grid>
</Page>