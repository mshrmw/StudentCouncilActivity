<Window x:Class="StudentCouncilActivity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCouncilActivity"
        mc:Ignorable="d"
        Title="Авторизация" Height="650" Width="1000">
    <Grid>
        <Label Content="Авторизация" HorizontalAlignment="Center"  Margin="0,100,0,0" VerticalAlignment="Top" FontFamily="FuturaMediumC" FontSize="54" Foreground="#1F1F1F"/>
        <TextBox x:Name="login" TextWrapping="Wrap" Text="Введите логин" FontSize="22" FontFamily="FuturaBookC" HorizontalAlignment="Center" Width="390" Height="40" VerticalAlignment="Top" Margin="0,254,0,0" GotFocus="loginGotFocus"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Center"  VerticalAlignment="Top"  Width="390" Height="40"  FontSize="22" FontFamily="FuturaBookC" Margin="0,303,0,0"/>
        <Button Content="Войти" Style="{DynamicResource MainButton}" FontSize="38" HorizontalAlignment="Center" Width="390" Height="60" VerticalAlignment="Top" Margin="0,400,0,0" BorderThickness="0,1,1,1" RenderTransformOrigin="20,20" Click="ButtonWelcome"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,480,110,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="27" Width="132" FontFamily="FuturaBookC" FontSize="18" TextAlignment="Center" Text="Нет аккаунта?"/>
        <TextBlock HorizontalAlignment="Center" Margin="105,480,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="117" FontFamily="FuturaBookC" FontSize="18" TextAlignment="Center" Foreground="#5A81FA">
            <Hyperlink Click="HyperlinkClick">
                <Run Text="Регистрация"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
